@page "/Casual-Crossroad"

<style>

    html, body {
        overflow: hidden;
        margin: 0;
        padding: 0;
    }


    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;

    }

    h3 {
        color: #273248;
    }
     

    html {
        position: relative;
        min-height: 100%;
    }

    body {
        background: #ffffff;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        font-weight: 400;
        flex-direction: column;
        position: relative;
        font-family: Hack, monospace;
        
        div

    {
        margin: 20px;
    }

    }

    .btn-1 {
        font-family: Hack, monospace;
        background: #273248;
        color: #FFA364;
        cursor: pointer;
        font-size: 2em;
        padding: 1.5rem;
        border: 1px solid #FFA364;
        margin-bottom: 20px;
        transition: all 0.5s;
        border-radius: 10px;
        width: auto;
        position: relative;
        &::after

    {
        content: "\f054";
        font-family: "Font Awesome 5 Pro";
        font-weight: 400;
        position: absolute;
        left: 85%;
        top: 31%;
        right: 5%;
        bottom: 0;
        opacity: 0;
    }

    &:hover {
        background: #2b2bff;
        transition: all 0.5s;
        border-radius: 10px;
        box-shadow: 0px 6px 15px #0000ff61;
        padding: 1.5rem 3.5rem 1.5rem 1.5rem;
        &::after

    {
        opacity: 1;
        transition: all 0.5s;
    }

    }
    }
</style>



<html lang="en">

<body>

<div>
    <h3>
        Choose your gamemode :)
    </h3>
</div>
<div class="container">

    <button class="btn-1" @onclick="ToAddition">Addition</button>

    
    <div>
    <button class="btn-1" @onclick="ToMultiplication">Multiplication</button>
    </div>
    
 
</div>
</body>

</html>

@code {
    private void ToAddition()
    {
        NavigationManager.NavigateTo("/Casual-Game-Mode-Addition");
    }

    private void ToMultiplication()
    {
        NavigationManager.NavigateTo("/Casual-Game-Mode-Multiplication");
    }
}