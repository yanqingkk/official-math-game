@page "/Casual-Crossroad"

<style>
    .container {
        position: fixed;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        font-family: Courier New, Courier, monospace;
        margin: -10px;
        background-color: #273248;
        color: #FFA364
    }

        .container .button {
            padding: 10px;
            justify-content: center;
            border: 1px solid #FFA364;
            font-family: Courier New, Courier, monospace;
            background-color: #273248;
            font-weight: bold;
            color: #FFA364;
            padding: 10px 20px; 
            margin-bottom: 30px; /* the margin between buttons */
            font-size: 16px; 
        }

</style>

<div class="container">

    <button class="button" @onclick="ToAddition">Addition</button>

    <button class="button" @onclick="ToMultiplication">Multiplication</button>

</div>

@code {
    private void ToAddition()
    {
        NavigationManager.NavigateTo("/Casual-Game-Mode-Addition");
    }

    private void ToMultiplication()
    {
        NavigationManager.NavigateTo("/Casual-Game-Mode-Multiplication");
    }
}