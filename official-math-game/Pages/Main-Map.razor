@page "/Main-map"

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }
        .container {
            position: relative;
            width: 100%;
            height: 100%;
        }

            .container img {
               
                width: 100%;
                height: 100%;
                object-fit: cover;
              
            }
            

            .container .battle-one {
                position: absolute;
                top: 55%;
                left: 15%;
                transform: translate(-50%, -50%);
                -ms-transform: translate(-50%, -50%);
                background-color: #555;
                color: white;
                font-size: 20px;
                padding: 12px;
                border: none;
                cursor: pointer;
                text-align: center;
                border-radius: 50%;
                width: 150px;
                height: 150px;
            }

            .container .battle-two {
                position: absolute;
                top: 30%;
                left: 30%;
                background-color: #555;
                color: white;
                font-size: 20px;
                padding: 20px;
                border: none;
                cursor: pointer;
                text-align: center;
                border-radius: 50%;
                width: 150px;
                height: 150px;
            }

            .container .battle-three {
                position: absolute;
                top: 50%;
                left: 50%;
                background-color: #555;
                color: white;
                font-size: 20px;
                padding: 20px;
                border: none;
                cursor: pointer;
                text-align: center;
                border-radius: 50%;
                width: 150px;
                height: 150px;
            }

            .container .battle-four {
                position: absolute;
                top: 55%;
                left: 70%;
                background-color: #555;
                color: white;
                font-size: 20px;
                padding: 20px;
                border: none;
                cursor: pointer;
                text-align: center;
                border-radius: 50%;
                width: 150px;
                height: 150px;
            }

            .container .boss-fight {
                position: absolute;
                top: 25%;
                left: 80%;
                background-color: #555;
                color: red;
                font-size: 40px;
                padding: 20px;
                border: none;
                cursor: pointer;
                text-align: center;
                border-radius: 50%;
                width: 200px;
                height: 200px;
            }

            .container .casual-game-mode {
                position: absolute;
                top: 70%;
                left: 25%;
                background-color: #555;
                color: white;
                font-size: 15px;
                padding: 20px;
                border: none;
                cursor: pointer;
                text-align: center;
                border-radius: 50%;
                width: 120px;
                height: 120px;
            }
            


                .container .battle-one:hover,
                .container .battle-two:hover,
                .container .battle-three:hover,
                .container .battle-four:hover,
                .container .boss-fight:hover,
                .container .casual-game-mode:hover
                {
                    background-color: black;
                }
    </style>
</head>
<body>

    <div class="container">
        <img src="images/map.jpg" style="width:100%">
        <button class="battle-one" @onclick="ToBattleOne">1</button>
        <button class="battle-two" @onclick="ToBattleTwo">2</button>
        <button class="battle-three" @onclick="ToBattleThree">3</button>
        <button class="battle-four" @onclick="ToBattleFour">4</button>
        <button class="boss-fight" @onclick="ToBossFight">5</button>
        <button class="casual-game-mode" @onclick="CasualGameMode">Play Casual Game Mode</button>
    </div>

</body>

@code {
    private void ToBattleOne()
    {
        NavigationManager.NavigateTo("/Battle-1");
    }

    private void ToBattleTwo()
    {
        NavigationManager.NavigateTo("/Battle-2");
    }

    private void ToBattleThree()
    {
        NavigationManager.NavigateTo("/Battle-3");
    }

    private void ToBattleFour()
    {
        NavigationManager.NavigateTo("/Battle-4");
    }

    private void ToBossFight()
    {
        NavigationManager.NavigateTo("/Boss-Fight-Pre");
    }

    private void CasualGameMode()
    {
        NavigationManager.NavigateTo("/Casual-Game-Mode");
    }
}